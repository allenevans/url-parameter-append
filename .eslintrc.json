{
  "parserOptions": {
    "ecmaVersion": 8
  },
  "env": {
    "es6": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "rules": {
    "max-len": [
      "error",
      140,
      2,
      {
        "ignoreUrls": true,
        "ignoreComments": false,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "**/*.spec.js"
      ],
      "rules": {
        "global-require": 0,
        "import/no-extraneous-dependencies": 0
      }
    }
  ]
}
